      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "userservice",
          "Port": 8080
        }
      ],
      "Priority": 1, // mais específica, casca antes da genérica
      "CorsOptions": {
        "AllowCredentials": true,
        "AllowedOrigins": [ "http://localhost:3000", "https://mujapira.com" ],
        "AllowedMethods": [ "GET", "OPTIONS" ],
        "AllowedHeaders": [ "*" ]
      }
    },

    {
      "UpstreamPathTemplate": "/users/me",
      "UpstreamHttpMethod": [ "GET", "OPTIONS" ],
