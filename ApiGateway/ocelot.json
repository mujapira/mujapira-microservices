{
  "Routes": [
    /* AUTH (anônimo) */
    {
      "UpstreamPathTemplate": "/auth/login",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/auth/login",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identityservice",
          "Port": 5002
        }
      ],
      "HttpHandlerOptions": {
        "UseCookieContainer": false,
        "AllowAutoRedirect": false
      }
    },
    {
      "UpstreamPathTemplate": "/auth/refresh",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/auth/refresh",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identityservice",
          "Port": 5002
        }
      ],
      "HttpHandlerOptions": {
        "UseCookieContainer": false,
        "AllowAutoRedirect": false
      }
    },

    /* AUTH (protegido) */
    {
      "UpstreamPathTemplate": "/auth/logout",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/auth/logout",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identityservice",
          "Port": 5002
        }
      ],
      "AuthenticationOptions": { "AuthenticationProviderKey": "Bearer" },
      "HttpHandlerOptions": {
        "UseCookieContainer": false,
        "AllowAutoRedirect": false
      }
    },

    /* USERS (anônimo) */
    {
      "UpstreamPathTemplate": "/users/register",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/users/register",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identityservice",
          "Port": 5002
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/users/validateCredentials",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/users/validateCredentials",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identityservice",
          "Port": 5002
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/users/{id}",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/api/users/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identityservice",
          "Port": 5002
        }
      ]
    },

    /* USERS (protegido) */
    {
      "UpstreamPathTemplate": "/users",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/api/users",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identityservice",
          "Port": 5002
        }
      ],
      "AuthenticationOptions": { "AuthenticationProviderKey": "Bearer" },
      "RouteClaimsRequirement": { "Role": "Admin" }
    },
    {
      "UpstreamPathTemplate": "/users/promoteByEmail",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/users/promoteByEmail",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identityservice",
          "Port": 5002
        }
      ],
      "AuthenticationOptions": { "AuthenticationProviderKey": "Bearer" },
      "RouteClaimsRequirement": { "Role": "Admin" }
    },
    {
      "UpstreamPathTemplate": "/users/{id}",
      "UpstreamHttpMethod": [ "PUT" ],
      "DownstreamPathTemplate": "/api/users/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identityservice",
          "Port": 5002
        }
      ],
      "AuthenticationOptions": { "AuthenticationProviderKey": "Bearer" },
      "RouteClaimsRequirement": { "Role": "Admin|User" }
    },
    {
      "UpstreamPathTemplate": "/users/{id}",
      "UpstreamHttpMethod": [ "DELETE" ],
      "DownstreamPathTemplate": "/api/users/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identityservice",
          "Port": 5002
        }
      ],
      "AuthenticationOptions": { "AuthenticationProviderKey": "Bearer" },
      "RouteClaimsRequirement": { "Role": "Admin" }
    },

    /* LOGS (protegido) */
    {
      "UpstreamPathTemplate": "/logs/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "DownstreamPathTemplate": "/api/logs/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "logservice",
          "Port": 5001
        }
      ],
      "AuthenticationOptions": { "AuthenticationProviderKey": "Bearer" },
      "RouteClaimsRequirement": { "Role": "Admin" }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://api.mujapira.com",
    "RequestIdKey": "OcRequestId"
  }
}
