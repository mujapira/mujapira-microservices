      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "userservice",
          "Port": 8080
        }
      ],
      "CorsOptions": {
        "AllowCredentials": true,
        "AllowedOrigins": [ "http://localhost:3000", "https://mujapira.com" ],
        "AllowedMethods": [ "POST", "OPTIONS" ],
        "AllowedHeaders": [ "*" ]
      }
    },


    {
      "UpstreamPathTemplate": "/users/{id}",
