{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "MongoDb": {
    "ConnectionString": "mongodb://mongo:27017",
    "DatabaseName": "LogServiceDb",
    "CollectionName": "Logs"
  },
  "Kafka": {
    "BootstrapServers": "kafka:9092",
    "Topic": "logs"
  },
  "AllowedHosts": "*"
}
